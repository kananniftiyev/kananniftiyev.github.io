---
interface Props {
    sectionName: string
}

const {sectionName} = Astro.props
---

<div class="flex flex-row mb-16 items-centers">
    <div class="w-32 flex-shrink-0">
        <p class="italic font-bold text-lg text-gray-600 flex-shrink-0">{sectionName}</p>
    </div>
    <div class="aa flex-grow ml-2">
        <slot/>
    </div>
    
</div>

<style>
    p{
        font-family: 'Times New Roman', Times, serif;
    }
    .aa{
        margin-top: 2px;
    }
</style>
